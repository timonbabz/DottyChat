<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.timothy.dottychat.StatusActivity">

    <include layout="@layout/app_bar" android:id="@+id/status_activity_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/status_activity_bar">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/status_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="My status"
                android:textColor="@color/black"/>
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_updatestatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:width="150dp"
            android:text="Update status"
            android:background="@color/blue"
            android:textColor="@color/white"/>

    </LinearLayout>
</RelativeLayout>
