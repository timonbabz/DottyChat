<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/prof_avatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/newest_avatar"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        app:civ_border_color="@color/colorPrimaryDark"
        app:civ_border_width="2dp" />/>

    <TextView
        android:id="@+id/name_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:text="@string/display_name"
        android:layout_toRightOf="@+id/prof_avatar"/>

    <TextView
        android:id="@+id/status_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/prof_avatar"
        android:layout_below="@+id/name_list"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Hi, Dottychat is awesome!"/>

    <ImageView
        android:id="@+id/imageViewOnline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/name_list"
        android:visibility="invisible"
        app:srcCompat="@drawable/online_16" />

</RelativeLayout>